<script>
    $(document).ready(function() {
        function renderPageData(){
            var page_banner = getRepoDetailsByName('Events & Contests').images;
            console.log(page_banner);
            var banner_url = "";
            $.each(page_banner, function(key, val){
                banner_url = val.photo_url_abs;
            });
            console.log(banner_url);
            $(".banner_container").css({background: "url(" + banner_url + ")"});
            
            renderBanners("#page_banner_container","#page_banner_template", page_banner)
            
            all_promos = getEventsList();
            all_promos = all_promos.reverse();
            all_contests = getContestList();
            all_contests = all_contests.reverse();
            
            if (all_contests.length > 0) {
                $.each( all_contests , function( key, val ){
                    if (val.description.length > 110) {
                       val.description =  val.description.substring(0,150)+'...';
                    } 
                });
                renderDetailData("#store_contest_container","#store_contest_template", all_contests, "contests");    
            } else {
                $("#tab_2_content").css("width","100%")
                $("#store_contest_container").hide()
                $("#no_contest_container").show();
            }
            promo_array = []
            promo_array = []
            feature_promo_array = []
            $.each( all_promos , function( key, val ){
                if (val.description.length > 110) {
                   val.description =  val.description.substring(0,150)+'...';
                } 
                today = moment();
                webDate = moment(val.show_on_web_date).tz(getPropertyTimeZone());
                if (today >= webDate && val.is_featured == false) {
                    c = $.inArray("news", val.tags)
                    if (c == 0){
                    } else {
                        promo_array.push(val) 
                    }
                } 
                if (val.is_featured == true){
                    c = $.inArray("news", val.tags)
                    if (c == 0){
                    } else {
                        feature_promo_array.push(val)
                    }
                }
            });
            feature_promo_array = feature_promo_array.sort(function(a,b){
                if(a.feature_item_index > b.feature_item_index){ return 1}
                    if(a.feature_item_index < b.feature_item_index){ return -1}
                    return 0;
            });
            all_promos = promo_array;
            
            
            all_promos = all_promos.sort(function(a,b){
                if(a.start_date > b.start_date){ return 1}
                    if(a.start_date < b.start_date){ return -1}
                    return 0;
            });
            
            if (all_promos.length > 0  || feature_promo_array.length > 0) {
                renderDetailData("#featured_boxes_container2","#featured_boxes_template2", all_promos, "promos");     
                renderDetailData("#featured_boxes_container","#featured_boxes_template", feature_promo_array, "promos"); 
            } else {
                if (all_promos.length == 0){
                    $("#store_promo_container").hide();
                }
                if (feature_promo_array.length == 0 ){
                    $("#feature_store_promo_container").hide()
                }
                $("#no_event_container").show();
            }
            //  $.each( all_promos , function( key, val ){
            //     if (val.description.length > 110) {
            //       val.description =  val.description.substring(0,300)+'...';
            //     } 
            //      today = new Date();
            //      webDate = new Date(val.show_on_web_date)
            //      if (today >= webDate) {
            //         c = $.inArray("news", val.tags)
            //         if (c == -1){
            //             promo_array.push(val)    
            //         }
                    
            //      } 
                
            //  });
            // all_promos = promo_array;
            // if (all_promos.length > 0 ) {
            //     renderDetailData("#store_promo_container","#store_promo_template", all_promos, "promos");    
            // } else {
            //     $("#tab_1_content").css("width","100%")
            //     $("#store_promo_container").hide()
            //     $("#no_event_container").show();
            // }
            
            $.getScript("https://cdn.jsdelivr.net/slimbox/2.0.5/js/slimbox2.js");
            $('head').append('<link rel="stylesheet" href="https://cdn.jsdelivr.net/slimbox/2.0.5/css/slimbox2.css" type="text/css" media="screen" />');
            $(".loading_overlay").hide();
            $("#page_content").show();
            // load_slider("flexslider4");
            $('.chevron_accordion').click(function(){
                $(this).toggleClass("open_accordion");
                $(this).next('.accordion_body').slideToggle();
            });
            
            $('.featured_box_header, .featured_name').click(function(e){
                $(this).parent().find(".chevron_accordion").toggleClass("open_accordion");
                $(this).parent().find(".accordion_body").slideToggle();
                e.preventDefault();
            })
        }
        
        function renderBanners(container, template, collection){
            var item_list = [];
            var item_rendered = [];
            var template_html = $(template).html();
            Mustache.parse(template_html);   // optional, speeds up future uses
            
            $.each( collection , function( key, val ) {
                var rendered = Mustache.render(template_html,val);
                item_rendered.push(rendered);
            });
            $(container).show();
            $(container).html(item_rendered.join(''));
        }
        
        function renderDetailData(container, template, collection, type){
            var item_list = [];
            var item_rendered = [];
            var template_html = $(template).html();
            Mustache.parse(template_html);   // optional, speeds up future uses
            $.each( collection , function( key, val ) {
                // start = new Date (val.start_date + "T08:00:00Z");
                // end = new Date (val.end_date + "T08:00:00Z");
                var start = moment(val.start_date).tz(getPropertyTimeZone());
                var end = moment(val.end_date).tz(getPropertyTimeZone());
                c = $.inArray("news", val.tags)
                // if (start.toDateString() == end.toDateString()) {
                //     val.start_month = get_month(start.getMonth())
                //     val.start_day = start.getDate()
                //     val.date_string = val.start_month + " " + val.start_day
                // } else {
                //     val.start_month =get_month(start.getMonth())
                //     val.start_day = start.getDate() 
                //     val.end_month = get_month(end.getMonth())
                //     val.end_day = end.getDate()
                //     val.end_day = val.end_day
                //     val.date_string = val.start_month + " " + val.start_day + " - " + val.end_month + " " +  val.end_day
                // }
                
                if (start.format("DMY") == end.format("DMY")){
                	val.date_string = start.format("MMM D");
                }
                else {
                	val.date_string = start.format("MMM D") + " - " + end.format("MMM D");
                }
                
                if (type == "promos"){
                    if ((val.event_image_url).indexOf('missing.png') > -1){
                        val.alt_store_front_url = "//codecloud.cdn.speedyrails.net/sites/5639075d6e6f647b9f020000/image/jpeg/1453749449000/TheBayCentre (1).jpg"
                    } else {
                        val.alt_store_front_url = getImageURL(val.event_image_url);
                    }
                    if (val.eventable_type == "Store"){
                        var store_details = getStoreDetailsByID(val.eventable_id)
                        val.store_name = store_details.name
                        val.store_info = '<a href="/stores/' + store_details.slug + ' " style="margin-left:5px" class="contact_object"><img src="//codecloud.cdn.speedyrails.net/sites/556628266e6f640eb3000000/591c7592ceb43ac4f0b12c32d6af5630/promo_icon_info_dark.png" class="detail_icon" alt="location"><span>Store Info</span></a>'
                    }    
                } else {
                    val.alt_promo_image_url = "https://mallmaverick.com"+val.photo_url
                    val.store_name = "The Bay Centre"
                }
                val.encoded_name = encodeURI(val.store_name + " - " + val.name);
                val.encoded_body = "Check this out @ The Bay Centre: //thebaycentre.com/promotions/"+encodeURI(val.slug);
                $("#promo_header").show();   
                var rendered = Mustache.render(template_html,val);
                item_rendered.push(rendered);
            });
            $(container).show();
            $(container).html(item_rendered.join(''));
        }
        
        $(".tabs li").click(function(e){
            var clicked = this.id
            $(".tabs li").css({"background":"transparent","color":"white"});
            $(".tabs li").find(".tab_overlay").css("display","block");
            $(".tabs li").find("div").css("color","white");
            $(this).css("background","white");
            $(this).find("div").css("color","#4d4d4f");
            $(this).find(".tab_overlay").css("display","none");
            $(".tab_content li").hide();
            $("#"+clicked + "_content").show()
            $("#"+clicked + "_content li").show()
        });
        
        function get_month (id){
            switch(id) {
                case 0:
                    month = "Jan"
                    break;
                case 1:
                    month = "Feb"
                    break;
                case 2:
                    month = "Mar"
                    break;
                case 3:
                    month = "Apr"
                    break;
                case 4:
                    month = "May"
                    break;
                case 5:
                    month = "Jun"
                    break;
                case 6:
                    month = "Jul"
                    break;
                case 7:
                    month = "Aug"
                    break;
                case 8:
                    month = "Sep"
                    break;
                case 9:
                    month = "Oct"
                    break;
                case 10:
                    month = "Nov"
                    break;
                case 11:
                    month = "Dec"
                    break;
            }
            return month;
        }
        loadMallData(renderPageData);
    });
</script>