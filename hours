<script>
    // $("#main_image").attr("src", "//codecloud.cdn.speedyrails.net/sites/556628266e6f640eb3000000/ae788a0d586c414fe1209f4b0056bc1e/Hours.png");
    // $("#left_image").attr("src", "//codecloud.cdn.speedyrails.net/sites/556628266e6f640eb3000000/100437cc60f41ae910b0356151c200b6/guest_banner3.jpg");
    // $("#right_image").attr("src", "//codecloud.cdn.speedyrails.net/sites/556628266e6f640eb3000000/100437cc60f41ae910b0356151c200b6/guest_banner2.jpg");
    
    function show_stores(id){
       if ($("#cat_"+id+"_stores").is(":visible")){
           $("#cat_"+id+"_stores").slideUp();
           $("#icon_"+id).removeClass("fa-minus")
           $("#icon_"+id).addClass("fa-plus")
       } else {
           $("#cat_"+id+"_stores").slideDown();
           $("#icon_"+id).removeClass("fa-plus")
           $("#icon_"+id).addClass("fa-minus")
       }
    }
    
    function load_slider(slider){
            
        $('.'+slider).flexslider({
                animation: "slide",
                controlNav: false,
                directionNav: true,    
                animationLoop: true,
                slideshow: true,
                minItems: 3,
                maxItems: 3,
                prevText: "",
                nextText: "",
                after:function(){
                    
                    var first = $("#banner_slider_ul").children(":first")
                    // console.log($("#banner_slider_ul").children().length)
                    if ($("#banner_slider_ul").children().length < 6){
                        $("#banner_slider_ul").append(first.clone())
                    }
                  
                    // $("#banner_slider_ul").append(first.clone())
                }
            });
        }
         
    
    $(document).ready(function() {
        
        
        
        function renderPageData(){
            
            
            banners = []
            
            banners.push("//codecloud.cdn.speedyrails.net/sites/556628266e6f640eb3000000/ae788a0d586c414fe1209f4b0056bc1e/Hours.png")
            banners.push("//codecloud.cdn.speedyrails.net/sites/556628266e6f640eb3000000/ed84014fb10de3731d4a758a6e33795e/HoursRIGHT.jpg");
            banners.push("//codecloud.cdn.speedyrails.net/sites/556628266e6f640eb3000000/ed84014fb10de3731d4a758a6e33795e/HoursLEFT.jpg");
            banner_array = []
            $.each( banners , function( key, val ) {
                var obj = {};
                obj["image_url"] = val;
                banner_array.push(obj)
            })
            
            renderBanners("#banner_slider_ul","#banner_slider_template",banner_array)
            
            var hours = getPropertyHours();
            reg_hours = []
            holiday_hours = []
            $.each( hours , function( key, val ) {
                if (val.store_id == null && val.is_holiday == false){
                    reg_hours.push(val)
                }
                if (val.store_id == null && val.is_holiday == true){
                    holiday_hours.push(val)
                }
            })
            
            renderData("#cat_regular_hours_stores","#regular_hours_template",reg_hours, "reg_hours")
            renderData("#cat_holiday_hours_stores","#holiday_hours_template",holiday_hours, "holiday_hours")
            
            
            
            
            
            
            // $(".hidden_div").hide();
            $(".loading_overlay").hide();
            $("#page_content").show();
            
            load_slider("flexslider4");
            
            
            
            
        }
        
        function renderBanners(container, template, collection){
            var item_list = [];
            var item_rendered = [];
            var template_html = $(template).html();
            Mustache.parse(template_html);   // optional, speeds up future uses
            
            $.each( collection , function( key, val ) {
                var rendered = Mustache.render(template_html,val);
                item_rendered.push(rendered);
            });
            
            $(container).show();
            $(container).html(item_rendered.join(''));
            
        }
        function renderData(container, template, collection, type){
            var item_list = [];
            var item_rendered = [];
            var template_html = $(template).html();
            Mustache.parse(template_html);   // optional, speeds up future uses
            $.each( collection , function( key, val ) {
               switch(val.day_of_week) {
                    case 0:
                        val.day = "Sunday"
                        break;
                    case 1:
                        val.day = "Monday"
                        break;
                    case 2:
                        val.day = "Tuesday"
                        break;
                    case 3:
                        val.day = "Wednesday"
                        break;
                    case 4:
                        val.day = "Thursday"
                        break;
                    case 5:
                        val.day = "Friday"
                        break;
                    case 6:
                        val.day = "Saturday"
                        break;
                    
                }
                var open_time = new Date (val.open_time)
                var close_time = new Date (val.close_time)
                val.open_time = convert_hour(open_time);
                val.close_time = convert_hour(close_time);
                if (val.is_closed == true){
                    val.hour_string = "Closed"
                } else {
                    val.hour_string = val.open_time + " - " + val.close_time
                } 
                if (type == "holiday_hours"){
                    hol = moment(val.holiday_date).tz(getPropertyTimeZone());
                    val.hol = (get_month(hol.getMonth()))+" "+(hol.getDate());   
                }
                
                var rendered = Mustache.render(template_html,val);
                item_rendered.push(rendered);
            });
            $(container).show();
            $(container).html(item_rendered.join(''));
        }
        loadMallDataCached(renderPageData);
        
        function get_month (id){
            switch(id) {
                case 0:
                    month = "Jan"
                    break;
                case 1:
                    month = "Feb"
                    break;
                case 2:
                    month = "Mar"
                    break;
                case 3:
                    month = "Apr"
                    break;
                case 4:
                    month = "May"
                    break;
                case 5:
                    month = "Jun"
                    break;
                case 6:
                    month = "Jul"
                    break;
                case 7:
                    month = "Aug"
                    break;
                case 8:
                    month = "Sep"
                    break;
                case 9:
                    month = "Oct"
                    break;
                case 10:
                    month = "Nov"
                    break;
                case 11:
                    month = "Dec"
                    break;
                    
            }
            return month;
        }
    })
    
</script>