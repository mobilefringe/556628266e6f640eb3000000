                            <div>
                                {{{rich_description}}}
                            </div>
                            <div class="text-center">
                                <img class="featured_store_img" alt="photo_{{name}}" src="{{alt_promo_image_url}}"/>
                            </div>
                            <span>
                                <a href="https://facebook.com/sharer.php?u=www.thebaycentre.ca/jobs/{{slug}}" class="share_links">
                                    <img src="//codecloud.cdn.speedyrails.net/sites/556628266e6f640eb3000000/19be0dcfe6428f0d1b57c253af02c6ce/hover_social_fb.png" class="" alt="share fb">
                                </a>
