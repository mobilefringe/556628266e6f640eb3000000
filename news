<script>
    $(document).ready(function() {
        function renderPageData(){
            var page_banner = getRepoDetailsByName('News').images;
            var banner_url = "";
            $.each(page_banner, function(key, val){
                banner_url = val.photo_url_abs;
            });
            $("#page_banner").css({backgroundImage: "url(" + banner_url + ")"});
            
            all_promos = getEventsList();
            all_promos = all_promos.reverse();
            promo_array = []
            $.each( all_promos , function( key, val ){
                if (val.description.length > 110) {
                    val.description =  val.description.substring(0,300)+'...';
                } 
                today = moment().tz(getPropertyTimeZone());
                webDate = moment(val.show_on_web_date).tz(getPropertyTimeZone());
                if (today >= webDate) {
                    c = $.inArray("news", val.tags)
                    if (c == 0){
                        promo_array.push(val)    
                    }
                } 
            });
            all_promos = promo_array;
            
            all_promos = all_promos.sort(function(a,b){
               if(a.start_date > b.start_date){ return 1}
                if(a.start_date < b.start_date){ return -1}
                  return 0;
            });
            if (all_promos.length > 0 ) {
                renderDetailData("#store_promo_container","#store_promo_template", all_promos, "promos");    
            } else {
                $("#tab_1_content").css("width","100%")
                $("#store_promo_container").hide()
                $("#no_event_container").show();
            }
            $.getScript("//cdn.jsdelivr.net/slimbox/2.0.5/js/slimbox2.js");
            $('head').append('<link rel="stylesheet" href="//cdn.jsdelivr.net/slimbox/2.0.5/css/slimbox2.css" type="text/css" media="screen" />');
            $(".loading_overlay").hide();
            $("#page_content").show();
        }
        
        function renderDetailData(container, template, collection, type){
            var item_list = [];
            var item_rendered = [];
            var template_html = $(template).html();
            Mustache.parse(template_html);   // optional, speeds up future uses
            $.each( collection , function( key, val ) {
                var start = moment(val.start_date).tz(getPropertyTimeZone());
                var end = moment(val.end_date).tz(getPropertyTimeZone());
                c = $.inArray("news", val.tags)
                on_now = $.inArray("on_now", val.tags)
                coming_soon = $.inArray("coming_soon", val.tags)
                news_tag = $.inArray("news_tag", val.tags)
                now_open = $.inArray("now_open", val.tags)
                if (start.format("MMM D") == end.format("MMM D") || c == 0) {
                    if (coming_soon == 1){
                         val.one = "COMING"
                         val.two = "SOON"
                    }
                    if (news_tag == 1){
                         val.one = "News"
                         val.two = ""
                    }
                    if (on_now == 1){
                        val.one = "ON"
                        val.two = "NOW"
                    }
                    if (now_open == 1){
                        val.one = "NOW"
                        val.two = "OPEN"
                    }
                    val.date_string = start.format("MMM D");
                } else {
                    val.date_string = start.format("MMM D") + " - " + end.format("MMM D");
                }
                
                if (type == "promos"){
                    if ((val.logo_url).indexOf('missing.png') > -1){
                        if (val.eventable_type == "Store"){
                            var store_details = getStoreDetailsByID(val.eventable_id)
                            console.log(store_details);
                            if(!store_details.store_front_url ||  store_details.store_front_url.indexOf('missing.png') > -1 || store_details.store_front_url.length === 0){
                                val.alt_promo_image_url = "//codecloud.cdn.speedyrails.net/sites/5639075d6e6f647b9f020000/image/jpeg/1453749449000/TheBayCentre (1).jpg"    
                            } else {
                                val.alt_promo_image_url = getImageURL(store_details.store_front_url);    
                            }    
                        } else {
                           val.alt_promo_image_url = "//codecloud.cdn.speedyrails.net/sites/5639075d6e6f647b9f020000/image/jpeg/1453749449000/TheBayCentre (1).jpg" 
                        }
                    } else {
                        val.alt_promo_image_url = (val.logo_url);
                    }
                    if (val.eventable_type == "Store"){
                        var store_details = getStoreDetailsByID(val.eventable_id)
                        val.store_info = '<a href="/stores/'+store_details.slug+'"><img src="//codecloud.cdn.speedyrails.net/sites/556628266e6f640eb3000000/591c7592ceb43ac4f0b12c32d6af5630/promo_icon_info.png" class="store_promo_button_icon" alt="store_promo_button_icon"><p>store info</p></a>'
                    }    
                } else {
                    val.alt_promo_image_url = "//mallmaverick.com"+val.photo_url
                }
                $("#promo_header").show();   
                var rendered = Mustache.render(template_html,val);
                item_rendered.push(rendered);
            });
            $(container).show();
            $(container).html(item_rendered.join(''));
        }
        loadMallData(renderPageData);
    });
</script>