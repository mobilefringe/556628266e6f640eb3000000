<script>
    // $("#left_image").attr("src", "//codecloud.cdn.speedyrails.net/sites/556628266e6f640eb3000000/3c5606ef73e9ef9b0a7d0ffe19ae9b7c/promo_banner3.jpg");
    // $("#right_image").attr("src", "//codecloud.cdn.speedyrails.net/sites/556628266e6f640eb3000000/3c5606ef73e9ef9b0a7d0ffe19ae9b7c/promo_banner2.jpg");
    // $("#main_image").attr("src", "//codecloud.cdn.speedyrails.net/sites/556628266e6f640eb3000000/3c5606ef73e9ef9b0a7d0ffe19ae9b7c/promo_banner1.jpg");
    
    function load_slider(slider){
            
        $('.'+slider).flexslider({
                animation: "slide",
                controlNav: false,
                directionNav: true,    
                animationLoop: true,
                slideshow: true,
                minItems: 3,
                maxItems: 3,
                prevText: "",
                nextText: "",
                after:function(){
                    var active_rel = $(this).find('.flex-active-slide').attr('rel');
                    //do something
                    var first = $("#banner_slider_ul").children(":first")
                    // console.log($("#banner_slider_ul").children().length)
                    if ($("#banner_slider_ul").children().length < 6){
                        $("#banner_slider_ul").append(first.clone())
                    }
                    // $("#banner_slider_ul").append(first.clone())
                }
            });
        } 
    
    
    $(document).ready(function() {
        function renderPageData(){
            banners = []
            
            banners.push("//codecloud.cdn.speedyrails.net/sites/556628266e6f640eb3000000/3c5606ef73e9ef9b0a7d0ffe19ae9b7c/promo_banner1.jpg")
            banners.push("//codecloud.cdn.speedyrails.net/sites/556628266e6f640eb3000000/ed84014fb10de3731d4a758a6e33795e/DealsRIGHT.jpg");
            banners.push("//codecloud.cdn.speedyrails.net/sites/556628266e6f640eb3000000/ed84014fb10de3731d4a758a6e33795e/DealsLEFT.jpg");
            banner_array = []
            $.each( banners , function( key, val ) {
                var obj = {};
                obj["image_url"] = val;
                banner_array.push(obj)
            })
            
            renderBanners("#banner_slider_ul","#banner_slider_template",banner_array)
            
            
            all_promos = getPromotionsList();
            all_promos = all_promos.reverse();
            promo_array = []
            feature_promo_array = []
             $.each( all_promos , function( key, val ){
                
                 today = new Date();
                 webDate = new Date(val.show_on_web_date + "T08:00:00Z")
                 if (today >= webDate && val.is_featured == false) {
                     promo_array.push(val)
                 } 
                 if (val.is_featured == true){
                     feature_promo_array.push(val)
                 }
             });
             feature_promo_array = feature_promo_array.sort(function(a,b){
               if(a.feature_item_index > b.feature_item_index){ return 1}
                if(a.feature_item_index < b.feature_item_index){ return -1}
                  return 0;
            });
            all_promos = promo_array;
            if (all_promos.length > 0  || feature_promo_array.length > 0) {
                renderDetailData("#featured_boxes_container","#featured_boxes_template", feature_promo_array, "promos"); 
                renderDetailData("#featured_boxes_container2","#featured_boxes_template2", all_promos, "promos"); 
                
            } else {
                if (all_promos.length == 0){
                    $("#store_promo_container").hide();
                }
                
                if (feature_promo_array.length == 0 ){
                    $("#feature_store_promo_container").hide()
                }
                $("#no_event_container").show();
            }
            
            $.getScript("//cdn.jsdelivr.net/slimbox/2.0.5/js/slimbox2.js");
            $('head').append('<link rel="stylesheet" href="//cdn.jsdelivr.net/slimbox/2.0.5/css/slimbox2.css" type="text/css" media="screen" />');
            $(".loading_overlay").hide();
            $("#page_content").show();
            load_slider("flexslider4");
            $('.chevron_accordion').click(function(){
                $(this).toggleClass("open_accordion");
                $(this).next('.accordion_body').slideToggle();
            });
            $('.share_links').click(function(e){
                var uri = encodeURI($(this).attr('href'));
                if(uri.indexOf('mailto') < 0){
                    e.preventDefault();
                    var popup= window.open(uri,'popUpWindow','height=500,width=500, left=50,top=50, resizable=yes,scrollbars=yes,toolbar=yes,menubar=no,location=no,directories=no,status=yes')
                }
            });
            $('.featured_box_header, .featured_name').click(function(e){
                $(this).parent().find(".chevron_accordion").toggleClass("open_accordion");
                $(this).parent().find(".accordion_body").slideToggle();
                e.preventDefault();
            })
        }
        
        function renderBanners(container, template, collection){
            var item_list = [];
            var item_rendered = [];
            var template_html = $(template).html();
            Mustache.parse(template_html);   // optional, speeds up future uses
            
            $.each( collection , function( key, val ) {
                var rendered = Mustache.render(template_html,val);
                item_rendered.push(rendered);
            });
            
            $(container).show();
            $(container).html(item_rendered.join(''));
            
        }
        
        function renderDetailData(container, template, collection, type){
            var item_list = [];
            var item_rendered = [];
            var template_html = $(template).html();
            Mustache.parse(template_html);   // optional, speeds up future uses
            $.each( collection , function( key, val ) {
                
                    if (val.promotionable_type == "Store"){
                        var store_details = getStoreDetailsByID(val.promotionable_id)
                        val.store_slug = store_details.slug
                        if(!store_details.store_front_url ||  store_details.store_front_url.indexOf('missing.png') > -1 || store_details.store_front_url.length === 0){
                            val.alt_promo_image_url = "//codecloud.cdn.speedyrails.net/sites/5639075d6e6f647b9f020000/image/jpeg/1453749449000/TheBayCentre (1).jpg"    
                        } else {
                            val.alt_promo_image_url = getImageURL(val.promo_image_url);
                        }   
                        val.store_name = store_details.name
                    } else {
                       val.alt_promo_image_url = "//codecloud.cdn.speedyrails.net/sites/5639075d6e6f647b9f020000/image/jpeg/1453749449000/TheBayCentre (1).jpg" 
                       val.store_name = "The Bay Centre"
                    }
                    
                    
             
                val.encoded_name = encodeURI(val.store_name + " - " + val.name);
                val.encoded_body = "Check this out @ The Bay Centre: http://thebaycentre.com/promotions/"+encodeURI(val.slug);
                if (val.promotionable_type == "Store"){
                    var store_details = getStoreDetailsByID(val.promotionable_id)
                    val.store_info = '<a href="/stores/'+store_details.slug+'"><img src="//codecloud.cdn.speedyrails.net/sites/556628266e6f640eb3000000/591c7592ceb43ac4f0b12c32d6af5630/promo_icon_info.png" class="store_promo_button_icon" alt="store_promo_button_icon"><p>store info</p></a>'
                }
                $("#promo_header").show();   
                var rendered = Mustache.render(template_html,val);
                item_rendered.push(rendered);
            });
            
            $(container).show();
            $(container).html(item_rendered.join(''));
        }
        
        loadMallDataCached(renderPageData);
    });
</script>