<script>
    $(document).ready(function() {
        function renderAll(){
            var page_banner = getRepoDetailsByName('Stores').images;
            var banner_url = "";
            $.each(page_banner, function(key, val){
                banner_url = val.image_url;
            });
            $("#page_banner").css({backgroundImage: "url(" + banner_url + ")"});
            
            // var categories = getStoreCategories();
            var categories = getStoreCategories();
            var category_list = [];
            $.each( categories, function( key, val ){
                if (val.store_ids != null) {
                    category_list.push(val);
                } 
            });
            console.log('category_list', category_list)
            var alpha_stores = getStoresList();  
            renderPageData("#cat_stores_container","#cat_stores_template", category_list, "cats");
            var alpha_array = generateAlphaStoreList(alpha_stores);
            renderPageData("#alpha_stores_container","#alpha_stores_template", alpha_array, "cats");
            
            $(".loading_overlay").hide();
            $("#page_content").show();
            $(".website_td a").attr("target","_blank");
        }
        
        $("#search_stores").on("blur", function(evt) {
            if (navigator.userAgent.match(/(iPod|iPhone|iPad)/)) {
                $('#search_stores').trigger(
                    jQuery.Event( 'keypress', { keyCode: 13, which: 13 } )
                );
            }
        });
        
        
        $("#search_stores").keypress(function(event) {
            if (event.keyCode == 13) {
                search();
            }
        });
          
          
        function search(){
            var store_search_results = getSearchResults($('#search_stores').val(),10,100);
            if ($('#search_stores').val() == ""){
                var alpha_stores = getStoresList();
                var full_cat_array = getStoreCategories();
            } else {
                var alpha_stores = (store_search_results.stores)  
                var cat_array = new Array;
                if (store_search_results.stores.length > 0 ){
                    $.each( store_search_results.stores , function( key, val ) {
                        $.each( val.categories , function( key2, val2 ) {
                            cat_array.push(getCategoryDetails(val2))
                        }); 
                    });
                    console.log('cat_array', cat_array)
                    full_cat_array = jQuery.unique( cat_array );
                    $.each( full_cat_array , function( key, val ) {
                        newStoreIds = []
                        $.each( store_search_results.stores , function( key2, val2 ) {
                            if (jQuery.inArray(val.id, val2.categories)== -1){
                                newStoreIds.push(val2.id)
                            }
                        });
                        val.store_ids = newStoreIds
                    });
                }
            }
            var alpha_array = generateAlphaStoreList(alpha_stores);
            $("#alpha_stores_container").html($("#backup_alpha_stores_container").html())
            renderPageData("#alpha_stores_container","#alpha_stores_template", alpha_array, "cats");
            $("#cat_stores_container").html($("#backup_cat_stores_container").html())
            renderPageData("#cat_stores_container","#cat_stores_template", full_cat_array, "cats");
        }

        function generateAlphaStoreList (collection){
            alpha_list = new Array;
            alpha_array = new Array;
            $.each( collection , function( key, val ) {
                first_letter = (val.name).charAt(0)
                if (jQuery.inArray(first_letter, alpha_list)== -1){
                    obj = {};
                    obj.name = first_letter
                    obj.id = first_letter
                    alpha_array.push(obj);
                    alpha_list.push(first_letter)
                } else {
                     
                }
            });
            $.each( alpha_array , function( key, val ) {
                var store_ids = []
                $.each( collection , function( key2, val2 ) {
                    if (val.name == (val2.name).charAt(0)){
                        store_ids.push(val2.id)
                    }
                });
                val.store_ids = store_ids
             });
            return(alpha_array)
        }
        
        function renderPageData(container, template, collection, type){
            var item_list = [];
            var item_rendered = [];
            var template_html = $(template).html();
            Mustache.parse(template_html);   // optional, speeds up future uses
            $.each( collection , function( key, val ) {
                if (type == "cats"){
                    if(val.store_ids != null){
                        val.count = val.store_ids.length;  
                    } else {
                        val.count = "";
                    }
                }
                var rendered = Mustache.render(template_html,val);
                item_rendered.push(rendered);
            });
            
            $(container).show();
            $(container).html(item_rendered.join(''));
            
            if (type == "cats"){
                $.each( collection , function( key, val ) {
                    if(val.store_ids != null){
                        $.each( val.store_ids , function( key2, val2 ) {
                            store = getStoreDetailsByID(val2)
                            
                            if(store.categories && store.categories.includes(7773)) {
                                $("#cat_" + val.id + "_stores_table").append("<tr><td class='name_td'><a href='/stores/" + store.slug + "'>" + store.name + "<img class='locally_owned_logo' src='//codecloud.cdn.speedyrails.net/sites/599c748a6e6f6458cb7a0000/image/jpeg/1588173315056/locallyOwned.jpg'></a></td><td id='website_" + store.id + "' class='website_td'><a href='http://" + store.website + "'>Visit Website</a></td><td class='phone_td'><a class=' store_phone' href='tel:" + store.phone + "'>" + store.phone + "</a></td><td class='arrow_td'><a href='/stores/" + store.slug + "'><i class='fa fa-chevron-right list_icon'></i></a></td>")
                            } 
                            else {
                                $("#cat_" + val.id + "_stores_table").append("<tr><td class='name_td'><a href='/stores/" + store.slug + "'>" + store.name + "</a></td><td id='website_" + store.id + "' class='website_td'><a href='http://" + store.website + "'>Visit Website</a></td><td class='phone_td'><a class=' store_phone' href='tel:" + store.phone + "'>" + store.phone + "</a></td><td class='arrow_td'><a href='/stores/" + store.slug + "'><i class='fa fa-chevron-right list_icon'></i></a></td>")
                            }
                            if (store.website != "") {
                                
                            } else {
                                $("#website_"+store.id).html("");
                            }
                        });   
                    } else {
                        
                    }
                });    
            }
        }
        
        loadMallDataCached(renderAll);  
    });
    
    function show_stores(id){
        if ($("#cat_"+id+"_stores").is(":visible")){
            $("#cat_"+id+"_stores").slideUp();
            $("#icon_"+id).removeClass("fa-minus")
            $("#icon_"+id).addClass("fa-plus")
        } else {
            $("#cat_"+id+"_stores").slideDown();
            $("#icon_"+id).removeClass("fa-plus")
            $("#icon_"+id).addClass("fa-minus")
        }
    }

    function see_all_stores(){
        $("#search_stores").val('')
        $('#search_stores').trigger(
            jQuery.Event( 'keypress', { keyCode: 13, which: 13 } )
        );
    }

    $(".tabs li").click(function(e){
        var clicked = this.id
        $(".tabs li").css({"background":"transparent","color":"white"});
        $(".tabs li").find(".tab_overlay").css("display","block");
        $(".tabs li").find("div").css("color","white");
        $(this).css("background","white");
        $(this).find("div").css("color","#4d4d4f");
        $(this).find(".tab_overlay").css("display","none");
        $(".tab_content li").hide();
        $("#"+clicked + "_content").show()
        $("#"+clicked + "_content li").show()
    });
</script>